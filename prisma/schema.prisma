generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GeneratedDescription {
  id            Int      @id @default(autoincrement())
  productName   String
  productType   String?
  targetAudience String?
  features      String?
  tone          String?
  description   String
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
}

model User {
  id                    Int                    @id @default(autoincrement())
  email                 String                 @unique
  name                  String?
  createdAt             DateTime               @default(now())
  products              Product[]
  generatedDescriptions GeneratedDescription[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}
